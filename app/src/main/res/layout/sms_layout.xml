<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btnSend"
        android:gravity="center"
        android:text="Send"
        android:textSize="25dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/starting_point"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type where you are"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <edu.ubbdroid.android.widget.EditText
        android:id="@+id/starting_point_text"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/ending_point"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Type where you want to go"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <edu.ubbdroid.android.widget.EditText
        android:id="@+id/ending_point_text"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/passengers_label"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="For how many passengers"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <edu.ubbdroid.android.widget.EditText
        android:id="@+id/passengers_num"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/maximum_amount_label"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Type maximum amount you can pay"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <edu.ubbdroid.android.widget.EditText
        android:id="@+id/max_amount"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/extra_info_label"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Extra informations"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <edu.ubbdroid.android.widget.EditText
        android:id="@+id/extra_infi"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
    </ScrollView>
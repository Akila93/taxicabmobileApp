<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/request1_detailed"
        android:text="I need to go colombo from moratuwa"
        android:textSize="30dp"
        />

    <edu.ubbdroid.android.widget.EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/minimum_amount"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Accept"
        android:id="@+id/accept"
        android:textSize="30dp"
        />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="You accepted!"
        android:id="@+id/request_status_detailed"
        android:textSize="30dp"/>
</LinearLayout>